root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
quote_type = double

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 4

[*.php]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
